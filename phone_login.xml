<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="手机号登陆"
        android:textSize="28sp"
        android:textStyle="bold"
        android:paddingLeft="20sp"
         />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/e_phonenum"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:hint="输入手机号"
            android:maxLength="11"
            android:digits="0123456789"
            android:paddingLeft="40dp" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/e_yzm"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/e_phonenum"
            android:layout_below="@+id/e_phonenum"
            android:layout_marginTop="10dp"
            android:hint="输入验证码"
            android:maxLength="4" 
            android:digits="0123456789"/>

        <Button
            android:id="@+id/b_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/e_yzm"
            android:layout_alignBottom="@+id/e_yzm"
            android:layout_toRightOf="@+id/e_yzm"
            android:text="获取验证码" 
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:text=" "
            android:textColor="#FF0000"
            android:textSize="24dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_below="@+id/b_yzm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="#00BFFF"
            android:text="登录"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/e_phonenum"
            android:layout_marginBottom="3dp"
            android:layout_alignLeft="@+id/e_phonenum"
            android:src="@drawable/shouji" />

    </RelativeLayout>

</LinearLayout>